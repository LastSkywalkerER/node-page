#!/usr/bin/env bash
set -euo pipefail

# Always run from the repository root
SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
cd "$SCRIPT_DIR"

if ! command -v overmind >/dev/null 2>&1; then
  echo "Error: overmind is not installed. Install it with: brew install overmind" >&2
  exit 1
fi

if [[ ! -f "Procfile" ]]; then
  echo "Error: Procfile not found in $SCRIPT_DIR" >&2
  exit 1
fi

exec overmind start -f Procfile


